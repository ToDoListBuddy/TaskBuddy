@page
@model TaskBuddy.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>

                @Html.DisplayNameFor(model => model.Taskuri[0].Name)
            </th>
            <th>

                @Html.DisplayNameFor(model => model.Taskuri[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Taskuri[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Taskuri[0].Priority)
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.DateSort">
                @Html.DisplayNameFor(model => model.Taskuri[0].CreatedAt)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Taskuri[0].DeadLine)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Taskuri) {
        @if(item.IsCompleted!=true){
          
                <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Priority)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeadLine)
            </td>
@*             <td>
                @Html.DisplayFor(modelItem => item.IsCompleted)
            </td> *@
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
}

        <!-- Button to trigger the popup -->
        <button class="btn btn-primary" id="showPopup">Arata Notificarile</button>

        <!-- Popup content -->
        <div class="modal" tabindex="-1" role="dialog" id="popupModal">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Deadlines approaching</h5>
               
                    </div>
                    <div class="modal-body">
                        <!-- Popup body content goes here -->
                        @{
                            int nr = 1;
                        }
                        @foreach (var item in Model.Taskuri) {
                            
                            @if(item.IsCompleted!=true){
                                
                                <p>@nr. @Html.DisplayFor(modelItem => item.Name) || Prioritate: @Html.DisplayFor(modelItem => item.Priority)|| Deadline: @Html.DisplayFor(modelItem => item.DeadLine)</p>
                                nr++;
                            }
                           
                        }
                    </div>
                    <div class="modal-footer">
                        <!-- Additional buttons or actions can be added here -->
                    </div>
                </div>
            </div>
        </div>

        <!-- Script to handle the popup -->
        <script>
            $(document).ready(function () {

                function showPopup() { 
                    $("#popupModal").modal('show');
                }

                $("#showPopup").click(showPopup);

                setInterval(showPopup, 1 * 5 * 1000);
            });
        </script>
    </tbody>
</table>
